<% if @play.errors.size > 0 %>
  <div class="errors">
    <ul>
      <%= @play.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= simple_form_for @play do |f| %>
  <%= f.file_field :avatar %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Category" ) %>
  <%= f.input :title, label: "Play Title"%>
  <%= f.input :description %>
  <%= f.input :director %>
  <%= f.button :submit %>
<% end %>